meta {
  name: POST discount - negative price
  type: http
  seq: 4
}

post {
  url: http://localhost:8080/discount
  body: json
  auth: none
}

body:json {
  {
    "price": -100.0,
    "discount": 10.0
  }
}

tests {
  test("should return 400", function() {
    expect(res.getStatus()).to.equal(400);
  });
  
  test("should return error message", function() {
    expect(res.getBody().error).to.contain("price cannot be negative");
  });
}
